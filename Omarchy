waybar config.jsonc

  "custom/vpn": {
    "format": "{}  ",
    "exec": "bash /home/user/.config/sway/tools/vpnupdown status",
    // "exec-if": "test -d /proc/sys/net/ipv4/conf/tun0",
    "tooltip": "true",
    "return-type": "json",
    "interval": 1,
    "on-click": "bash /home/user/.config/sway/tools/vpnupdown toggle"
  },

sway/tools/vpnupdown

# ******************************************************** #
#                                                          #
#                                                          #
#    vpnupdown                                             #
#                                                          #
#    By: Raffael Willems <Raffael.Willems@im-c.de>         #
#                                                          #
#    Created: 2023/12/06 13:46:41 by Raffael Willems       #
#    Updated: 2023/12/06 21:48:41 by Raffael Willems       #
#                                                          #
# ******************************************************** #

#!/bin/bash

STATUS="$(systemctl is-active openvpn-client@openvpn.service)"
if [ "${STATUS}" = "inactive" ]; then
  if [ $1 = 'toggle' ]; then
    systemctl start openvpn-client@openvpn.service
    text="{\"text\":\"󱠽 \",\"class\":\"enabled\"}"
  fi
  text="{\"text\":\"󱠾 \",\"tooltip\":\"imc closed\"}"
else
  if [ $1 = 'toggle' ]; then
    systemctl stop openvpn-client@openvpn.service
    text="{\"text\":\"󱠾 \",\"tooltip\":\"imc closed\"}"
  fi
  ADDR="$(ip -br addr show dev tun0 | awk '{ print $3 }')"
  text="{\"text\":\"󱠽 \",\"class\":\"enabled\",\"tooltip\":\"$ADDR\"}"
fi
echo $text

